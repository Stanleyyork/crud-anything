<%= form_tag(search_queries_path, :method => "get", id: "search-form-get") do %>
	<%= text_field_tag :search, params[:search], placeholder: "Player" %>
	<%= text_field_tag :year, params[:year], placeholder: "Year" %>
	<%= text_field_tag :manufacturer, params[:manufacturer], placeholder: "Manufacturer" %>
	<%= text_field_tag :grade_company, params[:grade_company], placeholder: "Grade Company" %>
	<%= text_field_tag :grade, params[:grade], placeholder: "Grade" %>
	<%= submit_tag "Search" %>
<% end %>
<br>
<% if @results.present? %>
	<%= form_tag(search_queries_path, :method => "post", id: "search-form-post") do %>
		<%= hidden_field_tag :search, params[:search] %>
		<%= hidden_field_tag :grade_company, params[:grade_company] %>
		<%= hidden_field_tag :grade, params[:grade] %>
		<%= hidden_field_tag :year, params[:year] %>
		<%= hidden_field_tag :manufacturer, params[:manufacturer] %>
		<%= submit_tag "Save Query" %>
	<% end %>
	<br><br>
	<% @results.each do |c| %>
		<% (c.map{ |k,v| "#{k}: #{v}" }.sort).each do |x| %>
			<%= x %><br>
		<% end %>
		<br><br>
	<% end %>
<% end %>